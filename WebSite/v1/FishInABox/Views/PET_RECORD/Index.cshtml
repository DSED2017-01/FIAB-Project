@model IEnumerable<FishInABox.Models.PET_RECORD>

@{
    ViewBag.Title = "Index";
}

<h2>Pet Record</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-controller="PET_RECORD" asp-action="Index" method="get">

    <div>
        @Html.Label("Description Search - Leave this empty before searching to search entire table")
    </div>

    <p>
        Search: <input type="text" name="searchString"> <br />
    </p>
    <p>
        <input type="submit" value="Search" /> <br />
    </p>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CODE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DESCRIPTION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PET_INFO.COMMON)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PET_SIZE.DESCRIPTION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RECORD_PACKING.RECORD_FK)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CODE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DESCRIPTION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PET_INFO.COMMON)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PET_SIZE.DESCRIPTION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RECORD_PACKING.RECORD_FK)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_PK }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_PK }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_PK })
            </td>
        </tr>
    }

</table>
